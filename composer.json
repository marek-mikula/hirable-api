{
    "name": "marek-mikula/hirable-api",
    "version": "1.0.0",
    "type": "project",
    "description": "API for Hirable app.",
    "keywords": [
        "hirable",
        "laravel",
        "ats",
        "recruitment",
        "ai",
        "saas"
    ],
    "require": {
        "php": "^8.2",
        "giggsey/libphonenumber-for-php": "^9.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/telescope": "^5.0",
        "lorisleiva/laravel-actions": "^2.7",
        "openai-php/laravel": "^0.14.0",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^8.1",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.5",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^2.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Domain\\": "src/Domain/",
            "Support\\": "src/Support/",
            "Services\\": "src/Services/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "refactor": "rector",
        "refactor:dry": "rector --dry-run",
        "format": "pint",
        "test": "pest --parallel",
        "test:lint": "pint --test",
        "test:type-coverage": "pest --parallel --type-coverage --min=100",
        "test:coverage": "pest --parallel --coverage --min=60",
        "test:analyse": "phpstan analyse",
        "test:all": [
            "@test:type-coverage",
            "@test",
            "@test:lint",
            "@test:analyse",
            "@test:coverage"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
