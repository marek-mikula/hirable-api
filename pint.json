{
  "preset": "psr12",
  "exclude": [
    "bootstrap/cache",
    "docker",
    "docs",
    "public",
    "resources",
    "storage",
    "stubs",
    "vendor"
  ],
  "notName": [
    "*.blade.php"
  ],
  "rules": {
    "new_with_parentheses": {
      "anonymous_class": true,
      "named_class": true
    },
    "cast_spaces": {
      "space": "single"
    },
    "unary_operator_spaces": true,
    "declare_strict_types": true,
    "no_blank_lines_after_class_opening": true
  }
}
